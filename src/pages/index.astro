---
import ScrollButton from "../components/ScrollButton.jsx";
---

<!-- Navbar que se muestra al llegar a la sección de información -->
<nav id="navbar" class="fixed top-0 w-full p-4 bg-black bg-opacity-90 text-white hidden transition-opacity duration-500">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-2xl font-bold">Mi Portafolio</h1>
    <ul class="flex space-x-4">
      <li><a href="#info" class="hover:text-red-500">Inicio</a></li>
      <li><a href="#projects" class="hover:text-red-500">Proyectos</a></li>
      <li><a href="#contact" class="hover:text-red-500">Contacto</a></li>
    </ul>
  </div>
</nav>

<main class="h-screen flex flex-col justify-center items-center relative overflow-hidden">
  <!-- Fondo Oscuro con Blur y Tonos Rojos -->
  <div class="absolute inset-0 bg-black">
    <div class="absolute inset-0 bg-black opacity-90 blur-xl"></div>
    <div class="absolute inset-0 bg-red-900 opacity-10 mix-blend-overlay blur-2xl"></div>
  </div>

  <!-- Imagen de la mano de GodHand -->
  <div class="absolute inset-0 flex justify-center items-center z-10">
  </div>

  <!-- Botón de Scroll (React Component) -->
  <ScrollButton client:load />
</main>

<!-- Sección de Información -->
<section id="info" class="h-screen bg-black flex flex-col justify-center items-center text-gray-200 p-8">
  <h2 class="text-4xl font-bold mb-4">Bienvenido a mi Portafolio</h2>
  <p class="text-lg text-center max-w-md">Aquí encontrarás más sobre mi trabajo, inspirado en la atmósfera de Berserk...</p>
</section>
