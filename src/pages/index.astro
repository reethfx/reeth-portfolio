---
import { scrollToInfo } from "../scripts/scroll.js";
---

<main class="h-screen flex flex-col justify-center items-center bg-black relative overflow-hidden">
  <!-- Imagen de la mano de GodHand -->
  <div class="absolute inset-0 flex justify-center items-center">
    <img src="/images/god-hand.jpg" alt="GodHand" class="w-full max-w-md opacity-80" />
  </div>

  <!-- Botón de Scroll -->
  <button onclick={scrollToInfo} class="z-10 mt-10 px-4 py-2 bg-red-600 text-white font-bold rounded-lg transition transform hover:scale-105">
    Descubre más
  </button>
</main>

<!-- Sección de Información -->
<section id="info" class="h-screen bg-black flex flex-col justify-center items-center text-gray-200 p-8">
  <h2 class="text-4xl font-bold mb-4">Bienvenido a mi Portafolio</h2>
  <p class="text-lg text-center max-w-md">Aquí encontrarás más sobre mi trabajo, inspirado en la atmósfera de Berserk...</p>
</section>
